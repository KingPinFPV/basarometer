# =============================================================================
# BASAROMETER ENHANCED INTELLIGENCE SYSTEM - AUTHENTICATION CONFIGURATION
# =============================================================================
# Purpose: Environment variables for production authentication system
# Security: Copy to .env.local and configure with actual values
# Integration: Works with Supabase Auth + Enhanced Intelligence APIs
# =============================================================================

# SUPABASE AUTHENTICATION
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ENHANCED INTELLIGENCE API SECURITY
SCANNER_API_KEY=basarometer-scanner-v5-2025
API_SECRET_KEY=your-secret-key-for-internal-apis

# AUTHENTICATION SETTINGS
AUTH_SESSION_MAX_AGE=86400
AUTH_SESSION_UPDATE_AGE=3600
AUTH_SECURE_COOKIES=true

# ADMIN CONFIGURATION
ADMIN_EMAIL_DOMAIN=basarometer.org
DEFAULT_ADMIN_EMAIL=admin@basarometer.org

# RATE LIMITING
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ANONYMOUS_REQUESTS=100
RATE_LIMIT_AUTHENTICATED_REQUESTS=500
RATE_LIMIT_ADMIN_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# SCANNER INTEGRATION
SCANNER_WEBHOOK_SECRET=your-webhook-secret-here
SCANNER_SOURCE_VALIDATION=true
SCANNER_AUTO_APPROVAL_THRESHOLD=0.8

# PRODUCTION SECURITY
NODE_ENV=production
NEXTAUTH_URL=https://v3.basarometer.org
NEXTAUTH_SECRET=your-nextauth-secret-here

# ENHANCED INTELLIGENCE FEATURES
ENABLE_AUTO_DISCOVERY=true
ENABLE_QUALITY_GRADING=true
ENABLE_CONFIDENCE_SCORING=true
MEAT_INTELLIGENCE_API_VERSION=v5.2

# LOGGING AND MONITORING
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
PERFORMANCE_MONITORING=true

# HEBREW LANGUAGE SUPPORT
DEFAULT_LOCALE=he-IL
ENABLE_RTL=true
HEBREW_NLP_ENABLED=true

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================
# 1. Replace all placeholder values with actual credentials
# 2. Set NODE_ENV=production for production deployment
# 3. Enable HTTPS and secure cookies in production
# 4. Configure proper CORS origins for your domain
# 5. Set up monitoring and logging for authentication events
# 6. Regular security audits and key rotation recommended
# =============================================================================